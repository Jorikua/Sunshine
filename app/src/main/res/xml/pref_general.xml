<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:defaultValue="@string/pref_temp_default"
        android:title="@string/pref_temp_label"
        android:key="@string/pref_temp_key"
        android:entries="@array/entries_temp_list_pref"
        android:entryValues="@array/entryvalues_temp_list_pref"
        android:dialogTitle="@string/pref_temp_title" />


</PreferenceScreen>
